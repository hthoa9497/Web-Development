                <th>MÔ TẢ</th>
                <th>BÁN</th>
                <th>LOẠI</th>
              </tr>
            </thead>
            <tbody>
              {{# each Products}}
              {{# each this}}
              <tr>
                <td>{{this.name}}</td>
                <td>{{this.brand.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.availability}}</td>
                <td>{{this.image_link}}</td>
                <td>{{this.description}}</td>
                <td>{{this.sells}}</td>
                <td>Loại {{this.categoryID.name}}</td>
                <td><a href="/adminHome/productTable/{{this._id}}/delete"><button type="button" class="btn btn-warning">Xóa</button></a></td>
                <td><a href="/adminHome/productTable/{{this._id}}/edit"><button type="button" class="btn btn-info">Sửa</button></a></td>
              </tr>
              {{/each}}
              {{/each}}
            </tbody>
          </table>
