<!-- page content -->
<div class="right_col" role="main">
<div class="">
  <div class="page-title">
    <div class="title_left">
    <h3>
        Bảng hóa đơn
    </h3>
    </div>
  </div>
<div class="clearfix"></div>

<div class="row">
<div class="col-md-12 col-sm-12 col-xs-12">
<div class="container">
    {{# each Orders}}
    <div class="row">
        <div class="col-xs-12">
    		<div class="col-xs-6">
                <address>
                    <strong>Billed To:</strong><br>
                    {{name}}<br>
                    {{address}}<br>
                    {{phone}}<br>
                    Tài khoản: {{user.username}}<br>
					Tình trạng: {{check}}
                </address>
            </div>
    	</div>
    </div>
    
    <div class="row">
    	<div class="col-md-12">
    		<div class="panel panel-default">
    			<div class="panel-heading">
    				<h3 class="panel-title"><strong>Order summary</strong></h3>
    			</div>
    			<div class="panel-body">
    				<div class="table-responsive">
    					<table class="table table-condensed">
    						<thead>
                                <tr>
        							<td><strong>Item</strong></td>
        							<td class="text-center"><strong>Price</strong></td>
        							<td class="text-center"><strong>Quantity</strong></td>
        							<td class="text-right"><strong>Totals</strong></td>
                                </tr>
    						</thead>
    						<tbody>
    							<!-- foreach ($order->lineItems as $line) or some such thing here -->
                                {{# each this.items}}
    							<tr>
    								<td>{{this.item.name}}</td>
    								<td class="text-center">{{this.item.price}}</td>
    								<td class="text-center">{{this.qty}}</td>
    								<td class="text-right">{{this.price}}</td>
    							</tr>
                                {{/each}}
    							<tr>
    								<td class="no-line"></td>
    								<td class="no-line"></td>
    								<td class="no-line text-center"><strong>Total</strong></td>
    								<td class="no-line text-right">{{this.cart.totalPrice}}</td>
    							</tr>
    						</tbody>
    					</table>
						<form action="/adminHome/orderTable/status/{{this._id}}" method="POST" >
							<div class="col-md-12">
							<div class="col-md-4" style="display: flex; justify-content: center;">
								<input value="Chưa giao" name="status" type="radio"> Chưa giao </input>
							</div>
							<div class="col-md-4" style="display: flex; justify-content: center;">
								<input value="Đang giao" name="status" type="radio"> Đang giao </input>
							</div>
							<div class="col-md-4" style="display: flex; justify-content: center;">	
								<input  value="Đã giao" name="status" type="radio"> Đã giao </input>
							</div>
							</div>
							<br>
							<br>
							<div style="display: flex; justify-content: center;">
								<button type="submit" class="btn btn-info">Cập nhật tình trạng</button>
							</div>
							
						</form>
    				</div>
    			</div>
    		</div>
    	</div>
    </div>
    <hr/>
    {{/each}}
</div>
</div>
<!-- footer content -->
<!-- /footer content -->
</div>
<!-- /page content -->
</div>
