<!-- page content -->
<div class="right_col" role="main">
<div class="">
  <div class="page-title">
    <div class="title_left">
      <h3>
            Bảng sản phẩm
        </h3>
    </div>
  </div>
  <div class="clearfix"></div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Sản Phẩm </h2>
          <ul class="nav navbar-right panel_toolbox">
            <a href="/adminHome/productTable/create"><button type="button" class="btn btn-success">Thêm</button></a>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <table id="datatable" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Tên</th>
                <th>NSX</th>
                <th>GIÁ</th>
                <th>SỐ LƯỢNG</th>
                <th>TÌNH TRẠNG</th>
                <th>LINK HÌNH</th>
                <th>MÔ TẢ</th>
                <th>BÁN</th>
                <th>LOẠI</th>
              </tr>
            </thead>
            <tbody>
              {{# each Products}}
              {{# each this}}
              <tr>
                <td>{{this.name}}</td>
                <td>{{this.brand.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.availability}}</td>
                <td>{{this.image_link}}</td>
                <td>{{this.description}}</td>
                <td>{{this.sells}}</td>
                <td>Loại {{this.categoryID.name}}</td>
                <td><a href="/adminHome/productTable/delete/{{this._id}}"><button type="button" class="btn btn-warning">Xóa</button></a></td>
                <td><a href="/adminHome/productTable/edit/{{this._id}}"><button type="button" class="btn btn-info">Sửa</button></a></td>
              </tr>
              {{/each}}
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
      <!-- footer content -->
      <!-- /footer content -->
    </div>
    <!-- /page content -->
  </div>

</div>


 